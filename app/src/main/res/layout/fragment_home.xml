<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTimeline"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Let's see what I ate ..."
                android:textAlignment="center"
                android:textColor="#5DB178"
                android:textColorHint="#63B37D"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/textViewBeforeTimeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#17504A"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/pizzaPicture"
                        android:layout_width="120dp"
                        android:layout_height="130dp"
                        app:layout_constraintStart_toStartOf="@id/titleCard1"
                        tools:src="@drawable/pizza" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleCard1"
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="Pizza"
                            android:textAlignment="gravity"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:translationX="10dp"
                            android:translationY="10dp" />

                        <TextView
                            android:id="@+id/dateCard1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="22/11/10"
                            android:textAlignment="inherit"
                            android:textColor="#959595"
                            android:textSize="12sp"
                            android:translationX="10dp"
                            android:translationY="10dp" />

                        <TextView
                            android:id="@+id/contentCard1"
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="So delightful meal"
                            android:textAlignment="inherit"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:translationX="10dp"
                            android:translationY="10dp" />

                        <TextView
                            android:id="@+id/moodCard1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="Happy, Relax"
                            android:textAlignment="inherit"
                            android:textColor="#3A883D"
                            android:textSize="12sp"
                            android:translationX="10dp"
                            android:translationY="10dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/nemsPicture"
                        android:layout_width="120dp"
                        android:layout_height="130dp"
                        app:layout_constraintStart_toStartOf="@id/titleCard1"
                        tools:src="@drawable/nems" />

                    <LinearLayout
                        android:layout_width="133dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleCard2"
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="Ckicken Nems"
                            android:textAlignment="gravity"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:translationX="10dp"
                            android:translationY="10dp" />

                        <TextView
                            android:id="@+id/dateCard2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="22/11/9"
                            android:textAlignment="inherit"
                            android:textColor="#959595"
                            android:textSize="12sp"
                            android:translationX="10dp"
                            android:translationY="10dp" />

                        <TextView
                            android:id="@+id/contentCard2"
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="Family memories"
                            android:textAlignment="inherit"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:translationX="10dp"
                            android:translationY="10dp" />

                        <TextView
                            android:id="@+id/moodCard2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="Nostalgic, Dynamic, Kindness"
                            android:textAlignment="inherit"
                            android:textColor="#3A883D"
                            android:textSize="12sp"
                            android:translationX="10dp"
                            android:translationY="10dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="157dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cakePicture"
                        android:layout_width="120dp"
                        android:layout_height="130dp"
                        app:layout_constraintStart_toStartOf="@id/titleCard1"
                        tools:src="@drawable/cake" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleCard3"
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="Chocolate cake"
                            android:textAlignment="gravity"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:translationX="10dp"
                            android:translationY="10dp" />

                        <TextView
                            android:id="@+id/dateCard3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="22/11/9"
                            android:textAlignment="inherit"
                            android:textColor="#959595"
                            android:textSize="12sp"
                            android:translationX="10dp"
                            android:translationY="10dp" />

                        <TextView
                            android:id="@+id/contentCard3"
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="Sweet delicacy"
                            android:textAlignment="inherit"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:translationX="10dp"
                            android:translationY="10dp" />

                        <TextView
                            android:id="@+id/moodCard3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="Tired, Sad"
                            android:textAlignment="inherit"
                            android:textColor="#3A883D"
                            android:textSize="12sp"
                            android:translationX="10dp"
                            android:translationY="10dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonGraph"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#009688"
        android:text="Graph correlation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>